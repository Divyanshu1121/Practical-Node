<% include('layout', { title: 'All Articles' }); %>
    <h1>All Articles</h1>
    <ul>
        <% articles.forEach(article=> { %>
            <li>
                <h2><a href="#">
                        <%= article.title %>
                    </a></h2>
                <p>
                    <%= article.content.substring(0, 100) %>...
                </p>
                <p><small>By <%= article.author.username %></small></p>
            </li>
            <% }); %>
    </ul>